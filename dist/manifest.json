{
  "manifest_version": 2,
  "short_name": "Break_Timer",
  "name": "The Sandbox Timer Testing",
  "version": "1.0",

  "description": "A little timer that fills up like a fishtank or drains like an hourglass as it counts down.",
  "icons": {
    "16": "sandcat16.png",
    "48": "sandcat48.png",
    "128": "sandcat128.png"
  },

  "permissions": [
    "tabs",
    "contextMenus"
  ],

  "browser_action": {
    "default_popup": "index.html"
  },

  "background": {
    "scripts": ["background.js"]
   }
}
